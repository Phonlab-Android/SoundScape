<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maingrad"
    android:orientation="vertical"
    tools:context="com.example.phonlab.soundscape.MainActivity">

    <TextView
        style="@style/HeaderText"
        android:text="SoundScape" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/ImageColumn">

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:onClick="launchAnimals"
                    android:src="@drawable/animal_image" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:onClick="launchMusic"
                    android:src="@drawable/musical_notes" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:onClick="launchSpace"
                    android:src="@drawable/space" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:src="@drawable/two" />

            </LinearLayout>

            <LinearLayout style="@style/ImageColumn">

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:onClick="launchNature"
                    android:src="@drawable/nature" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:onClick="launchMedieval"
                    android:src="@drawable/medieval" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:onClick="launchYourOwn"
                    android:src="@drawable/one" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/CircleImage"
                    android:src="@drawable/three" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
